<%- layout('layouts/main.ejs')  %>

<!-- adds -->
<div class="container px-4 text-center">
    <div class="row gx-5" mt-5>
      <% for(let ad of allAds) {%>
        <% if(ad.postUser) {%>
            <% if(ad.postUser._id.equals(currentUser._id)) {%>
                <div class="col">
                    <div class="p-3">
                     <div class="card" style="width: 18rem;">
                      <img src="<%= ad.image[0].url %>" class="card-img-top" alt="..." style="width: 100%; height: 200px; object-fit: cover;">
                         <div class="card-body">
                           <h5 class="card-title"><%= ad.title %></h5>
                    
                           <a href="/ads/<%= ad._id  %>" class="btn btn-primary">View</a>
                         </div>
                       </div>
                    </div>
                   </div>
            <% } %>
            
        <% } %>
        
      <% } %>
    </div>
  </div>