<div class="row m-5">
    <div class="col-sm-6 mb-3 mb-sm-0">
      <div class="card">
        <!-- <img src="<%= sAd.image[0].url %>" class="card-img-top" alt="..." style="width: 100%; height: 500px; object-fit: cover;"> -->


        <!-- Mutiple image -->
        

        <!-- <img src="<%= sAd.image[0].url %>" class="card-img-top" alt="..." class="img-fluid"> -->
      

        <div id="carouselExampleIndicators" class="carousel slide">
          <div class="carousel-inner">
            <% for(let image of sAd.image) {%>
              <% if(image.url) {%>
                <div class="carousel-item active">
                    <img src="<%= image.url %>" class="d-block w-100" alt="<%= image.filename %>" style="max-width: 100%; height: auto;">
                </div>
              <% } %>
            <% } %>
            
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>


        <!-- Card Body -->
        <div class="card-body">
          <h5 class="card-title"><%= sAd.title %></h5>
          <hr>
          <p class="card-text"><%= sAd.description %></p>
          <hr>
          <p class="text-muted">Asking Price: $<%= sAd.askingPrice %>.00</p>
          <hr>
          <p class="text-muted">Location: <%= sAd.address %></p>
          <% if(currentUser) {%>
            <% if(sAd.postUser) {%>
                <% if(sAd.postUser._id.equals(currentUser._id)) {%>
                    <div class="btn-group">
                        <form action="/ads/<%= sAd._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                <% } %>
            <% } %>
        <%  }%>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Contact Information</h5>
          
          <p class="text-muted">Phone: <%= sAd.phone %></p>
          <p class="text-muted">Address: <%= sAd.address %></p>
        </div>
      </div>
    </div>
  </div>